<div class="search-wrap">
  <form action="/<%= currents[0] %>/<%= currents[1] %>" method="GET" class="form-inline">
    <select name="field" class="form-control mr-2">
      <option value="" selected>전체검색</option>
      <% if(currents[1] === 'user' || currents[1] === 'order') { %> 
        <option value="userid">아이디</option>
        <option value="username">이름</option>
        <option value="email">이메일</option>
        <option value="tel">전화번호</option>
        <option value="addr">주소</option>
      <% } %> 
      <% if(currents[1] === 'board') { %> 
        <option value="title">제목</option>
        <option value="content">내용</option>
        <option value="writer">작성자</option>
      <% } %> 
      <% if(currents[1] === 'prd') { %> 
        <option value="code">상품코드</option>
        <option value="name">상품명</option>
        <option value="content">상품설명</option>
      <% } %> 
    </select>
    <input type="text" name="search" class="form-control mr-2">
    <button class="btn btn-info">검색</button>
  </form>
</div>